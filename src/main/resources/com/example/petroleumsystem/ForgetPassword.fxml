<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="533.0" prefWidth="337.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.petroleumsystem.ForgetPassword">
   <children>
      <Label alignment="CENTER" layoutX="47.0" layoutY="8.0" prefHeight="55.0" prefWidth="213.0" style="-fx-text-fill: #03256C;" text="Forget Password">
         <font>
            <Font name="SansSerif Regular" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="txtUser" layoutX="32.0" layoutY="81.0" prefHeight="45.0" prefWidth="246.0" promptText="Enter Username" style="-fx-background-radius: 8; -fx-border-style: solid; -fx-border-width: 1pt; -fx-border-radius: 8; -fx-border-color: #E6E8EC;">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="ReadQuestion" layoutX="32.0" layoutY="209.0" prefHeight="45.0" prefWidth="246.0" style="-fx-background-radius: 8; -fx-border-width: 1pt; -fx-border-style: solid; -fx-border-color: #E6E8EC; -fx-border-radius: 8;">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </TextField>
      <Button fx:id="btnGetPassword" layoutX="32.0" layoutY="340.0" mnemonicParsing="false" onAction="#OnGetPassword" prefHeight="45.0" prefWidth="246.0" style="-fx-text-fill: white; -fx-background-color: #03256C; -fx-background-radius: 10;" text="Get Password">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </Button>
      <Hyperlink fx:id="goToLoginLink" layoutX="32.0" layoutY="465.0" onAction="#onGoToLogin" prefHeight="37.0" prefWidth="246.0" style="-fx-text-fill: #03256C;" text="Go To Login">
         <font>
            <Font name="SansSerif Regular" size="18.0" />
         </font>
      </Hyperlink>
      <Label fx:id="lblPrintPass" layoutX="31.0" layoutY="404.0" prefHeight="45.0" prefWidth="246.0" style="-fx-text-fill: #03256C;">
         <font>
            <Font name="SansSerif Regular" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtPassword" layoutX="32.0" layoutY="274.0" prefHeight="45.0" prefWidth="246.0" promptText="Enter answer of question" style="-fx-background-radius: 8; -fx-border-width: 1pt; -fx-border-style: solid; -fx-border-color: #E6E8EC; -fx-border-radius: 8;">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </TextField>
      <Button fx:id="userQuestion" layoutX="32.0" layoutY="144.0" mnemonicParsing="false" onAction="#getUserQuestion" prefHeight="45.0" prefWidth="246.0" style="-fx-text-fill: white; -fx-background-color: #03256C; -fx-background-radius: 10;" text="Get Question">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
